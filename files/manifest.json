{
  "manifest_version": 3,
  "name": "YouTube Link Modifier",
  "version": "1.0",
  "description": "Adds a button to modify YouTube URLs to yout-ube",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}